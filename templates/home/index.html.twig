{% extends 'base.html.twig' %}

{% block body %}
    {{ include('product/_confirm-modal.html.twig') }}

    <div class="container">
        <div class="row row-cols-1 row-cols-xl-3 row-cols-xxl-4 g-3">
            {% for product in products %}
                <div {{ stimulus_controller('product') }} {{ stimulus_target('product', 'product') }} class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p class="card-text text-truncate">
                                {{ product.name }}
                            </p>
                            <p class="text-lowercase">
                                <span {{ stimulus_target('product', 'stockCounter') }}>
                                    {{ product.inStock }}
                                </span>
                                {{ product.unit|trans }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button {{ stimulus_action('product', 'modifyProductStock', 'click', {
                                        url: path('product.addStock', {'id': product.id})
                                    }) }}
                                            type="button"
                                            class="btn btn-outline-secondary">
                                        <i class="bi bi-plus-circle"></i>
                                    </button>

                                    <a type="button"
                                       href="{{ path('product.edit', {'id': product.id}) }}"
                                       class="btn btn-outline-secondary">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <button {{ stimulus_action('product', 'deleteProduct', 'click', {
                                        url: path('product.delete', {'id': product.id}),
                                        token: csrf_token('delete' ~ product.id)
                                    }) }}
                                            type="button"
                                            class="btn btn-outline-secondary">
                                        <i class="bi bi-trash"></i>
                                    </button>

                                    <button {{ stimulus_action('product', 'modifyProductStock', 'click', {
                                        url: path('product.removeStock', {'id': product.id})
                                    }) }}
                                            type="button"
                                            class="btn btn-outline-secondary">
                                        <i class="bi bi-dash-circle"></i>
                                    </button>
                                </div>
                                <small class="text-body-secondary">
                                    {{ product.updatedAt }}
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
