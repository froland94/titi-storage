{% extends 'base.html.twig' %}

{% block title %}
    Belépés | TitiStorage
{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form class="m-auto p-5 shadow rounded bg-body-tertiary base-form" method="post" action="{{ path('app_login') }}">
            <h1 class="h3 mb-3 fw-normal">
                Bejelentkezés
            </h1>

            <div class="form-floating mb-3">
                <input type="email"
                       value="{{ last_username }}"
                       name="_username"
                       id="username"
                       class="form-control"
                       placeholder="name@example.com"
                       autocomplete="email"
                       required autofocus>
                <label for="username">
                    Email cím
                </label>
            </div>

            <div class="form-floating">
                <input type="password"
                       class="form-control"
                       name="_password"
                       id="password"
                       placeholder="Password"
                       autocomplete="current-password"
                       required>
                <label for="password">
                    Jelszó
                </label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember-me">
                <label class="form-check-label" for="remember-me">
                    Bejelentkezve maradok
                </label>
            </div>

            <div class="d-flex">
                <button class="btn btn-secondary py-2 w-100 me-1" type="submit">
                    Belépés
                </button>
                <a class="btn btn-secondary py-2 w-100 ms-1" type="submit" href="{{ path('app_register') }}">
                    Regisztráció
                </a>
            </div>
        </form>
    </div>
{% endblock %}
